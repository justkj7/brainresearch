<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".StressReductionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/lo_stroop_bt_q"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80sp"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_stroop_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textSize="48sp"
                android:text="Text" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/lo_stroop_bt_q"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_stroop_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textSize="70sp"
                android:text="O" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lo_stroop_bt_1"
            android:layout_above="@+id/lo_stroop_bt_2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp">
            <Button
                android:id="@+id/bt_stroop_green"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="onBtnGreen"
                android:textSize="24sp"
                android:text="Green"/>
            <Button
                android:id="@+id/bt_stroop_orange"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="onBtnOrange"
                android:textSize="24sp"
                android:text="Orange"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lo_stroop_bt_2"
            android:layout_above="@+id/lo_stroop_bt_3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp">
            <Button
                android:id="@+id/bt_stroop_blue"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="onBtnBlue"
                android:textSize="24sp"
                android:text="Blue"/>
            <Button
                android:id="@+id/bt_stroop_red"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="onBtnRed"
                android:textSize="24sp"
                android:text="Red"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lo_stroop_bt_3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20sp">
            <Button
                android:id="@+id/bt_stroop_yellow"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="onBtnYellow"
                android:textSize="24sp"
                android:text="Yellow"/>
            <Button
                android:id="@+id/bt_stroop_purple"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="onBtnPurple"
                android:textSize="24sp"
                android:text="Purple"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>